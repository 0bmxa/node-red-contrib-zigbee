{
  "name": "node-red-contrib-zigbee",
  "version": "0.8.0",
  "keywords": [
    "node-red",
    "zigbee",
    "hue",
    "aqara",
    "tradfri",
    "smart home automation",
    "cc2530",
    "cc2531"
  ],
  "main": "none",
  "author": "Sebastian Raff <hobbyquaker@gmail.com>",
  "license": "MIT",
  "description": "Node-RED Nodes for Zigbee Devices",
  "repository": "https://github.com/hobbyquaker/node-red-contrib-zigbee",
  "dependencies": {
    "mkdirp": "^0.5.1",
    "obj-ease": "^1.0.1",
    "vis": "^4.21.0",
    "zigbee-herdsman": "0.1.17",
    "zigbee-shepherd-converters": "10.1.4"
  },
  "scripts": {
    "test": "camo-purge; xo",
    "lintfix": "xo --fix"
  },
  "node-red": {
    "nodes": {
      "zigbee-shepherd": "nodes/shepherd.js",
      "zigbee-devices": "nodes/devices.js",
      "zigbee-converter": "nodes/converter.js",
      "zigbee-offline": "nodes/offline.js",
      "zigbee-hue": "nodes/hue.js",
      "zigbee-hue-light": "nodes/hue-light.js",
      "zigbee-event": "nodes/event.js",
      "zigbee-command": "nodes/command.js"
    }
  },
  "devDependencies": {
    "camo-purge": "^1.0.2",
    "eslint-plugin-html": "^6.0.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "space": 4,
    "plugin": "html",
    "global": [
      "$",
      "RED",
      "window",
      "document",
      "fetch",
      "vis"
    ],
    "extensions": [
      "js",
      "html"
    ],
    "rules": {
      "no-template-curly-in-string": "warn",
      "capitalized-comments": 0,
      "spaced-comment": 0,
      "unicorn/catch-error-name": 0,
      "no-unused-expressions": "warn"
    },
    "ignore": []
  }
}
